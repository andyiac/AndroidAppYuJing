<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="250dp"
    android:background="@drawable/bg_dialog_class"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_change_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textColor="#333"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_change_name"
        android:ems="10"
        android:hint="姓名"
        android:inputType="text" />
     <EditText
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:ems="10"
        android:hint="电话"
        android:inputType="text" 
        android:numeric="integer"
        />
      <EditText
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:ems="10"
        android:hint="成绩"
        android:inputType="text"
        android:numeric="integer" />

    <Button
        android:id="@+id/exitBtn1"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/exitBtn0"
        android:layout_alignBottom="@+id/exitBtn0"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/btn_style_blue"
        android:gravity="center"
        android:onClick="exitbutton1"
        android:text="取消"
        android:textColor="#333"
        android:textSize="16sp" />

    <Button
        android:id="@+id/exitBtn0"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/btn_style_blue"
        android:gravity="center"
        android:onClick="exitbutton0"
        android:text="确定"
        android:textColor="#333"
        android:textSize="16sp" />

</RelativeLayout>