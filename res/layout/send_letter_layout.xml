<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/relativeLayout1"
	android:background="#eee"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
> 
    <RelativeLayout 
    	android:layout_height="47dip"
    	android:background="@drawable/top_bg"
		android:layout_width="fill_parent" 
		android:id="@+id/relativeLayout2"
		android:layout_alignParentTop="true" 
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
	>
        <TextView 
        	android:id="@+id/textView1" 
        	android:text="@string/send_letter"
			style="@style/TitleTextView"
		/>
		<Button 
			android:layout_height="40dip" 
			android:layout_width="60dip"
			android:id="@+id/send"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:text="@string/send"
			android:background="@drawable/button"
			android:layout_marginBottom="8dip"
			android:layout_marginRight="12dip"
			android:layout_marginTop="8dip"
			android:textColor="#fff"
			android:textSize="18sp"
		/>
	</RelativeLayout>
	<LinearLayout 
		android:layout_height="150dip"
    	android:layout_width="wrap_content" 
		android:id="@+id/layout" 
    	android:layout_margin="10dip"
    	android:orientation="vertical"
    	android:layout_below="@+id/relativeLayout2" 
    	android:layout_alignParentLeft="true" 
    	android:layout_alignParentRight="true"
	
	
	>
		<EditText 
	    	android:layout_height="wrap_content"
	    	android:inputType="textMultiLine" 
	    	android:id="@+id/letter_name" 
	    	android:minHeight="50dip"
	    	android:hint="@string/input_letter_receicer"
	    	android:paddingLeft="10dip"
	    	android:layout_below="@+id/relativeLayout2" 
	    	android:layout_alignParentLeft="true" 
	    	android:layout_alignParentRight="true"
	   		android:layout_width="match_parent"
	   	>
		</EditText>
		<EditText 
	    	android:layout_height="fill_parent"
	    	android:inputType="textMultiLine" 
	    	android:id="@+id/letter_content" 
	    	android:gravity="top"
	    	android:hint="@string/input_letter_content"
	    	android:padding="10dip"
	    	android:layout_below="@+id/relativeLayout2" 
	    	android:layout_alignParentLeft="true" 
	    	android:layout_alignParentRight="true"
	   		android:layout_width="match_parent">
		</EditText>
	</LinearLayout>
   
    <RelativeLayout 
	    android:layout_height="fill_parent" 
	    android:id="@+id/tableRow1"
	    android:layout_width="fill_parent" 
	    android:layout_alignParentBottom="true" 
	    android:layout_alignParentLeft="true" 
		android:layout_below="@+id/layout"
		android:background="@drawable/panel_bg"
		android:layout_marginLeft="12dip"
		android:layout_marginRight="12dip"
		android:layout_marginBottom="10dip"
	>
		
		<ListView 
			android:id="@+id/person"
			android:layout_height="fill_parent"
			android:layout_width="wrap_content"
			android:cacheColorHint="#00000000"
			android:divider="#44808080"
			android:dividerHeight="0.5dip"
		
		></ListView>
		<LinearLayout 
			android:layout_alignParentTop="true"
			android:orientation="vertical" 
			android:layout_height="fill_parent"
			android:layout_width="wrap_content" 
			android:layout_alignParentRight="true"
			android:layout_alignParentLeft="true"
			android:id="@+id/profile"
			android:visibility="gone"
		>
	<RelativeLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	>
		<ImageView 
		android:layout_width="60dip"
			android:layout_height="60dip" 
			android:scaleType="fitXY"
			android:id="@+id/imageView1"
			android:layout_margin="10dip" 
			android:src="@drawable/ic_contact_list_picture" 
		/>
		<Button 
			android:id="@+id/back" 
			android:layout_height="40dip"
			android:layout_width="60dip"
			android:textColor="#fff" 
			android:text="@string/back"
			android:background="@drawable/button"
			android:layout_centerVertical="true" 
			android:layout_alignParentRight="true"
			android:layout_marginRight="10dip"
			android:onClick="backclick"
		/>
		</RelativeLayout>
			<TextView 
				android:text="姓名 ： hhda"
				style="@style/iTextView"
				android:id="@+id/name"
			/>
			<TextView 
				android:text="手机号  ： 18716468260"
				style="@style/iTextView"
				android:id="@+id/number"
			/>
			<TextView 
				style="@style/iTextView"
			 	android:text="性别 ：男"
				android:id="@+id/sex"
			/>
			<TextView 
				android:text="地址 ：重庆邮电大学"
				style="@style/iTextView"
				android:id="@+id/addr"
			/>
			<TextView 
				android:text="在线状态 ：在线上"
				style="@style/iTextView"
				android:id="@+id/online"
				android:visibility="gone"
			/>
			
	    </LinearLayout>
 	</RelativeLayout>
	
</RelativeLayout>


