<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <!--对话框的风格  -->
    <style name="iDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.InputMethod</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="iTextView">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#111</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:autoLink">all</item>
        <item name="android:paddingLeft">10dip</item>
    </style>

    <style name="TitleTextView" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:autoLink">none</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="AboutTextView" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#606060</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_height">47dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:autoLink">none</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">15dip</item>
        <item name="android:layout_marginLeft">15dip</item>
        <item name="android:clickable">true</item>
    </style>
</resources>


